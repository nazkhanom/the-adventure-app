<p id="notice"><%= notice %></p>

<h1>My Adventures</h1>

<div class="row">
  <% @adventures.in_groups_of(3) do |group| %>
    <% group.compact.each do |adventure| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag adventure.picture_url if adventure.picture.present?%>
          <div class="caption">
            <h4><%= link_to adventure.name, adventure %></h4>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<br>

<%= link_to 'New Adventure', new_adventure_path %>
